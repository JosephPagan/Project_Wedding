<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wedding - Emails Input</title>

    <link rel="stylesheet" href="/css/inputStyle.css" />
</head>
<body>

    <h1>Wedding Emails Input</h1>

    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    
    <form action="/dev/input" method="POST">
        <input type="text" name="userName" placeholder="User Name">
        <input type="email" name="email" placeholder="Email">
        <input type="password" name="password" placeholder="Password">
        <input type="password" name="confirmPassword" placeholder="Confirm Password">
        <input type="submit">
    </form>

    <section id="userDataContainer">
        <ul id="users">
            <% for(var u = 0; u < userData.length; u++) {%>
                <li>
                    <h3><%= userData[u].userName %></h3>
                    <h3><%= userData[u].email %></h3>
                    <label for="attending">Attending: </label>
                    <h4 id="attending" name="attending"><%= userData[u].attending %></h4>
                </li>
            <% } %>
        </ul>
    </section>
</body>
</html>